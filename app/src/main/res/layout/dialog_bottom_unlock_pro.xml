<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/actionsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/actions_text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pro_view_ads_icon"
            app:srcCompat="@drawable/ic_message"
            style="@style/ProActionIcon"
            tools:src="@drawable/ic_message">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/view_ads" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pro_invite_fb_friends_icon"
            app:srcCompat="@drawable/ic_message"
            style="@style/ProActionIcon"
            tools:src="@drawable/ic_message">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/invite_fb_friends" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pro_invite_firends_icon"
            app:srcCompat="@drawable/ic_message"
            style="@style/ProActionIcon"
            tools:src="@drawable/ic_message">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/invite_friends" />

    </LinearLayout>

</LinearLayout>